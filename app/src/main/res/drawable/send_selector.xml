        <shape>
            <stroke
                android:color="#7CAEDF"/>
            <corners
                android:radius="3dp" />
            <solid android:color="#007FFF"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:color="#007FFF"/>
            <corners
                android:radius="3dp" />
            <solid android:color="#007FFF"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                android:color="#007FFF"/>
            <corners
                android:radius="3dp" />
            <solid android:color="#007FFF"/>
        </shape>
    </item>
